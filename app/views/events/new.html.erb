<br/>
<h1 class="text-center">Create an event</h1>
<br/>
<div class="d-flex justify-content-center">
  <%= form_tag url_for(action: 'create'), method: "post", :id => 'css_form' do %>

  <div class="form-group text-center">
    <%= label_tag 'Start date' %><br/>
    <%= text_field_tag 'start_date', '',class: 'form-control'%>
  </div>

  <div class="form-group text-center">
    <%= label_tag 'Duration' %><br/>
    <%= text_field_tag 'duration', '', class: 'form-control'%>
  </div>

  <div class="form-group text-center">
    <%= label_tag 'Title' %><br/>
    <%= text_field_tag 'title', '',class: 'form-control'%>
  </div>

  <div class="form-group text-center">
    <%= label_tag 'Description' %><br/>
    <%= text_area_tag 'description', '',class: 'form-control'%>
  </div>

  <div class="form-group text-center">
    <%= label_tag 'Price' %><br/>
    <%= text_field_tag 'price', '',class: 'form-control'%>
  </div>

  <div class="form-group text-center">
    <%= label_tag 'Location' %><br/>
    <%= text_field_tag 'location', '',class: 'form-control'%>
    <br />
  </div>

  <div class="form-group text-center">
    <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
  </div>


  <% end %>
</div>

<style>
  #css_form{
    width: 40%;
  }
</style>