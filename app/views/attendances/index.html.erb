<section class="jumbotron text-center" style="margin-bottom: 0px !important;">
	<div class="container">
		<h1 class="jumbotron-heading">Event administration page :</h1>
		<p class="lead text-muted">Here the list of the participant who allready paid for your event.</p>
	</div>
</section>

<div class="album py-5 bg-light">
        <div class="container">
          <div class="row">

          	<% @attendance.each do |event| %>

	 			<div class="col-md-4">
	              <div class="card mb-4 box-shadow">
	                <img class="card-img-top" src="/event.png" alt="Card image cap">
	                <div class="card-body">
	                <h5 class="card-title">Event : </h5>
	                  <p class="card-text">Description : </p>
	                  <div class="d-flex justify-content-between align-items-center">
	                    <div class="btn-group">
	                      <button type="button" class="btn btn-sm btn-outline-secondary"> <a href="<%=event_path(event.id)%>">View</a></button>
	                      <button type="button" class="btn btn-sm btn-outline-secondary"> <a href="<%=edit_event_path(event.id)%>">Edit</a></button>
	                    </div>
	                    <small class="text-muted">Duration : </small>
	                  </div>
	                </div>
	              </div>
	            </div>

          	<% end %>

          </div>
      </div>
</div>