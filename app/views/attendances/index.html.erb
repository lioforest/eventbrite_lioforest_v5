<section class="jumbotron text-center" style="margin-bottom: 0px !important;">
	<div class="container">
		<h1 class="jumbotron-heading">Event administration page :</h1>
		<h1 class="jumbotron-heading"><%=@event.title%></h1>

		<br>

		<%= link_to "Edit this event", edit_event_path(id: @event.id), class:"btn btn-primary" %>
		<%= link_to "Delete this event", edit_event_path(id: @event.id), class:"btn btn-primary" %>

		<br>
		<br>
		<p class="lead text-muted">Here the list of the participant who allready paid for your event.</p>
	</div>
</section>

<div class="album py-5 bg-light">
        <div class="container">
          <div class="row">

          	<% @event.users.each do |user| %>

	 			<div class="col-md-4">
	              <div class="card mb-4 box-shadow">
	                <div class="card-body">
	                <h5 class="card-title">Participant : <%=user.first_name%> <%=user.last_name%> </h5>
	                  <p class="card-text">E-mail: <%=user.email%> <br> paid on <%=@event.attendances.select{|a| a.user==user}[0].created_at%> </p>
	                  <div class="d-flex justify-content-between align-items-center">
	                    <div class="btn-group">
	                      <button type="button" class="btn btn-sm btn-outline-secondary"> <a href="<%=edit_event_path(id: @event.id)%>">View</a></button>
	                    </div>
	                  </div>
	                </div>
	              </div>
	            </div>

          	<% end %>

          </div>
      </div>
</div>